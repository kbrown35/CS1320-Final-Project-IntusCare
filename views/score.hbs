<div class="wrapper2">
  <div class="row1">
    {{> profile }}
  </div>

   

    <div class="column2-score">
      <div class="row">
        <form action="/{{ patientAcuity }}" method="get">
          <button class="button button-score"> <i class="fa fa-arrow-circle-left arrow-return" aria-hidden="true"></i> <span class= "button-text"> Return to Past Scores</span></button>
        </form>
      </div>
        <div class="patient-acuity-title-box">
          <div class="row">
            <div class="column-acuityscore-title">
                <div class="box-title">Acuity Score</div>
            </div>
            <div class="column-acuityscore-title">
                <div class="date-title"> Completed by: Jane Foster, RN | {{formDate}} </div>
            </div>
         </div>
        </div>


      <div class="row">
        <div class="score-box" role="main" id="main" tabindex="-1">
          <div class="row">
              <div class="column-chart">
                <div id="total-score" class="row center-div">
                  <canvas id="acuityDonut"></canvas>
                </div>
                <div class="row center-div">
                  <div class="row-risk center-div">
                    <div class= "invisible-box">

                      <div id="risk-color" class="risklevel-box">
                      <div id="risk-level" class="risk-text"> {{riskLevel}} </div>
                      </div>


                      <div class="container-scoreranges">
                            <div class="container-scoreranges2">
                              <div class="column">
                                  <div class="row-scoreranges">
                                    <div class="legend-circle-low"></div>
                                    <span class="scorerange-text"> Low: 0-9 </span>
                                  </div>
                                  <div class="row-scoreranges">
                                    <div class="legend-circle-moderate"></div>
                                    <span class="scorerange-text"> Moderate: 10-19 </span>
                                  </div>
                                  <div class="row-scoreranges">
                                    <div class="legend-circle-high"></div>
                                    <span class="scorerange-text"> High: 20-34 </span>
                                  </div>
                                  <div class="row-scoreranges">
                                    <div class="legend-circle-veryhigh"></div>
                                    <span class="scorerange-text"> Very High: 35-45 </span>
                                  </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                </div>
              </div>


              <div class="column-chart">
                <div class="row">
                  <div id="legend-circle-1"></div>
                  <div id="section1-subscore" class="legend-text">
                    Active/Chronic Disease: {{ subScore1 }}
                  </div>
                </div>
                <div class="row">
                  <div id="legend-circle-2"></div>
                  <div id="section2-subscore" class="legend-text">
                    Behavioral Health Conditions: {{ subScore2 }}
                  </div>
                </div>
                <div class="row">
                  <div id="legend-circle-3"></div>
                  <div id="section3-subscore" class="legend-text">
                    Social Determinants: {{ subScore3 }}
                  </div>
                </div>
                <div class="row">
                  <div id="legend-circle-4"></div>
                  <div id="section4-subscore" class="legend-text">
                    Utilization Risk: {{ subScore4 }}
                  </div>
                </div>
                <div class="row">
                  <div id="legend-circle-5"></div>
                  <div id="section5-subscore" class="legend-text">
                    Care Management Risk: {{ subScore5 }}
                  </div>
                </div>

              </div>

              </div>
          </div>
       </div>



       <div class="row results-box">
          <div class="box-title2">Assessment Results</div>
      </div>


        <!-- Vue root component with the form results -->
        <main id="app">
          <results-component></results-component>
        </main>
        
  </div>
</div>
</div>




