  <script>
function discard() {
  if(confirm("Are you sure you want to discard?")) document.location = '/{{ patientAcuity }}';
}

function discardPast() {
  if(confirm("Are you sure you want to discard?")) document.location = "/{{ patientPast }}";
}

function discardUpcoming() {
  if(confirm("Are you sure you want to discard?")) document.location = "/{{ patientUpcoming }}";
}

function discardPatients() {
  if(confirm("Are you sure you want to discard?")) document.location = "/patients";
}

function discardLogout() {
  if(confirm("Are you sure you want to discard?")) document.location = "/";
}

function alertNonFunctional() {
  alert("This button is nonfunctional. This is a function already implemented on the client's preexisting application (IntusCare Manager Portal).");
}



</script>

